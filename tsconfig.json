{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./dist/out-tsc",
        "baseUrl": "src",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2016",
            "dom"
        ],
        "plugins": [
            { "name": "tslint-language-service" }
        ],
        "paths": {
            "@common": ["app/common"],
            "@common/*": ["app/common/*"],
            "@shared": ["app/common/shared"],
            "@shared/*": ["app/common/shared/*"],
            "@core": ["app/common/core/"],
            "@core/*": ["app/common/core/*"],
            "@ngx-shared": ["app/common/ngx-shared"],
            "@ngx-shared/*": ["app/common/ngx-shared/*"],
            "@feature": ["app/common/feature"],
            "@feature/*": ["app/common/feature/*"],
            "@config": ["config"],
            "@config/*": ["config/*"],
            "@mock": ["mock"],
            "@mock/*": ["mock/*"],
            "@utils": ["app/common/utils"],
            "@utils/*": ["app/common/utils/*"]
        }
    }
}